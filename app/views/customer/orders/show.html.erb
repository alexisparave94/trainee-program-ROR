
<h3>Order bought on <%= @comment_order_form.commentable.updated_at.to_fs(:db) %></h3>
<p class='my-3 mb-2 fs-5'><strong>Rate: </strong><%= @comment_order_form.rate.value || 'No rated' %></p>
<table class='table table-striped'>
  <thead>
    <th>#</th>
    <th style='text-align: center'>Product</th>
    <th style='text-align: center'>Quantity</th>
    <th style='text-align: center'>Price</th>
    <th style='text-align: center'>Subtotal</th>
  </thead>
  <tbody>
    <% @comment_order_form.commentable.order_lines.each.with_index do |order_line,i| %>
      <tr>
        <td style='vertical-align: middle'><%= i+1 %></td>
        <td style='text-align: center; vertical-align: middle'><%= order_line.product.name %></td>
        <td style='text-align: center; vertical-align: middle'><%= order_line.quantity %></td>
        <td style='vertical-align: middle'><%= format('$ %0.02f', order_line.price) %></td>
        <td style='vertical-align: middle'><%= format('$ %0.02f', order_line.total) %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="7">
        <h5 class='mb-0'>Total: <%= format('$ %0.02f', @comment_order_form.commentable.total) %></h5>
      </td>
    </tr>
  </tfoot>
</table>
<h4>Add a comments</h4>
<div data-turbo='false'>
  <%= form_for @comment_order_form, url: customer_comment_order_forms_path do |form| %>
    <div class="field mb-3">
      <%= form.hidden_field :order_id, value: @comment_order_form.commentable.id %>
      <%= form.text_area :description, class: 'form-control' %>
      <div class='mt-3'>
        <% unless @comment_order_form.errors.messages_for(:description).empty? %>
          <% @comment_order_form.errors.messages_for(:description).each do |message| %>
            <p class='text-danger fw-semibold'>* <%= message %></p>
          <% end %>
        <% end %>
      </div>
      <%= form.label :rate_value, 'Rate',class:'form-label' %>
      <em>(If you want you could rate or update your rate)</em>
      <%= form.text_field :rate_value, class: 'form-control' %>
      <div class='mt-3'>
        <% unless @comment_order_form.errors.messages_for(:rate_value).empty? %>
          <% @comment_order_form.errors.messages_for(:rate_value).each do |message| %>
            <p class='text-danger fw-semibold'>* <%= message %></p>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="d-grid mb-3">
      <%= form.submit 'Add Comment', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<div>
  <% if @comment_order_form.commentable.comments.empty? %>
    <h4>No Comments</h4>
  <% else %>
    <h4>Comments</h4>
    <% @comment_order_form.commentable.comments.each do |comment| %>
      <hr>
      <p><%= comment.description %></p>
      <p><%= time_ago_in_words(comment.created_at) %></p>
    <% end %>
  <% end %>
</div>