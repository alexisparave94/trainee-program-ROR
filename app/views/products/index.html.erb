<div class="d-flex justify-content-center">
  <div class="col-sm-6 col-md-6 col-lg-8">
    <%= form_with url: products_path, method: :get, class:"d-flex", role:"search" do |form| %>
      <%= form.text_field :search, value: @search, placeholder: 'Name of product', require: true, class:"form-control me-2", type:"search", 'aria-label':"Search" %>
      <%= button_tag class: "btn btn-outline-primary" do %>
        <i class="bi bi-search"></i>
      <% end %>
    <% end %>
  </div>
</div>
<div class='mb-2 mt-4 ps-3'>
  <h1>Products</h1>
</div>
<div class='container-md d-flex mb-3 gap-2'>
  <% if policy(Product).new? %>
    <%= link_to 'New Product', new_admin_product_path, class:'btn btn-primary' %>
  <% end %>
  <% if policy(ChangeLog).index? %>
    <%= link_to admin_change_logs_path, class:'btn btn-secondary' do %>
      <i class="bi bi-file-earmark-text"></i>
    <% end %>
  <% end %>
  <% if current_user.nil? || current_user&.customer? %>
    <% if session[:virtual_order] || session[:order_id] %>
      <%= link_to shopping_cart_path, class:'btn btn-primary' do %>
        <i class="bi bi-cart3"></i>
      <% end %>
    <% end %>
  <% end %>
  <% if current_user&.customer? %>
    <%= link_to 'My orders', customer_orders_path, class:'btn btn-primary' %>
  <% end %>
</div>
<div class='ms-3 d-flex align-items-center mb-3 gap-3'>
  <h5 class='my-0'>Filter by Tags</h5>
  <%= form_with url:products_path, method: :get, class:'d-flex align-items-center gap-2 flex-wrap' do |form| %>
    <%= form.collection_check_boxes :tag_id, Tag.all, :id, :name, checked: @selected_tags_ids %>
    <%= form.submit 'Filter Products', class: 'btn btn-primary' %>
  <% end %>
</div>
<div class='container-md d-flex flex-column gap-4'>
  <% @products.each do |product| %>
    <div class="card px-3 py-2">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted"><%= product.sku %></h6>
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text"><%= product.description %></p>
        <h6 class="card-subtitle mb-2 text-muted"><%= format('$ %0.02f', product.price) %></h6>
        <h6 class="card-subtitle mb-2 text-muted">Stock: <%= product.stock %></h6>
        <% if current_user&.admin? %>
        <% end %>
        <%= link_to product, class:'btn btn-primary' do %>
          <i class="bi bi-eye"></i>
        <% end %>
        <div class='mt-3 d-flex justify-content-between align-items-center'>
          <div class='d-flex gap-0 align-items-center'>
            <% if policy(Like).create? %>
              <% if product.likes.where(user_id: current_user.id).take %>
                <%= link_to [:customer, product.likes.where(user_id: current_user.id).take], data: {turbo_method: :delete}, class:'btn fs-4' do %>
                  <i class="bi bi-star-fill text-info"></i>
                <% end %>
              <% else %>
                <%= link_to customer_likes_path(product_id: product.id), data: {turbo_method: :post}, class:'btn btn-ligth fs-4' do %>
                  <i class="bi bi-star"></i>
                <% end %>
              <% end %>
            <% end %>
            <p class='mb-0 mt-1'>
              <%= "#{product.likes_count} #{'like'.pluralize(product.likes_count)}" %>
            </p>
          </div>
          <div>
            <% if policy(product).edit? %>
              <%= link_to edit_admin_product_path(product), class:'btn btn-primary' do %>
                <i class="bi bi-pencil"></i>
              <% end %>
            <% end %>
            <% if policy(product).destroy? %>
              <%= link_to admin_product_path(product), data: { turbo_method: :delete }, class:'btn btn-danger' do %>
                <i class="bi bi-trash"></i>
              <% end %>
            <% end %>
            <% if policy(OrderLine).new? %>
              <% if current_user %>
                <%= link_to 'Add to cart', new_customer_order_line_path(product_id: product.id), class:'btn btn-primary' %>
              <% else %>
                <%= link_to 'Add to cart', new_order_line_path(product_id: product.id), class:'btn btn-primary' %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>