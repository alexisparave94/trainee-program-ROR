<h1>Products</h1>
<p> <%= notice %></p>
<%= link_to 'New Product', new_product_path%>
<div>
  <ul>
    <% @products.each do |product| %>
      <li>
        <div>
          <p>
            <%= product.sku %>
          </p>
          <h2>
            <%= product.name %>
          </h2>
          <p>
            <%= product.description %>
          </p>
          <p>
            $ <%= product.price %>
          </p>
          <%= link_to 'Edit', edit_product_path(product) %>
        </div>
      </li>
    <% end %>
  </ul>
</div>