<div class='d-flex justify-content-center mb-3'>
  <h1>Transaction Log</h1>
</div>
<table class='table table-striped'>
  <thead>
    <th style='text-align: center'>#</th>
    <th style='text-align: center'>User</th>
    <th style='text-align: center'>Amount</th>
    <th style='text-align: center'>Status</th>
    <th style='text-align: center'>Description</th>
    <th style='text-align: center'>Date</th>
  </thead>
  <tbody>
    <% @transactions.each do |tran| %>
      <tr>
        <td style='text-align: center'><%= tran.id %></td>
        <td style='text-align: center'><%= tran.user.email %></td>
        <td style='text-align: center'><%= format('$ %0.02f', tran.amount/100) %></td>
        <td style='text-align: center'><%= tran.status %></td>
        <td style='text-align: center'><%= tran.description %></td>
        <td style='text-align: center'><%= tran.created_at.to_fs(:db) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
