<div class='d-flex flex-column align-items-center'>
  <h2>Edit Product</h2>
  <div class='col-sm-4 col-md-4 col-lg-4'>
    <%= form_for @product_form, 
                 url: @product_form.persisted? ? admin_product_form_path(@product_form.id) : admin_product_forms_path,
                 method: @product_form.persisted? ? :patch : :post do |form| %>
      <div class="field mb-3">
        <%= form.label :sku, class:'form-label' %>
        <%= form.text_field :sku, class: 'form-control' %>
          <div class='mt-3'>
            <% unless @product_form.errors.messages_for(:sku).empty? %>
              <% @product_form.errors.messages_for(:sku).each do |message| %>
                <p class='text-danger fw-semibold'>* <%= message %></p>
              <% end %>
            <% end %>
          </div>
      </div>
      <div class="field mb-3">
        <%= form.label :name, class:'form-label' %>
        <%= form.text_field :name, class: 'form-control' %>
          <div class='mt-3'>
            <% unless @product_form.errors.messages_for(:name).empty? %>
              <% @product_form.errors.messages_for(:name).each do |message| %>
                <p class='text-danger fw-semibold'>* <%= message %></p>
              <% end %>
            <% end %>
          </div>
      </div>
      <div class="field mb-3">
        <%= form.label :description, class:'form-label' %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>
      <div class="field mb-3">
        <%= form.label :price, class:'form-label' %>
        <%= form.text_field :price, class: 'form-control' %>
          <div class='mt-3'>
            <% unless @product_form.errors.messages_for(:price).empty? %>
              <% @product_form.errors.messages_for(:price).each do |message| %>
                <p class='text-danger fw-semibold'>* <%= message %></p>
              <% end %>
            <% end %>
          </div>
      </div>
      <div class="field mb-3">
        <%= form.label :stock, class:'form-label' %>
        <%= form.text_field :stock, class: 'form-control' %>
          <div class='mt-3'>
            <% unless @product_form.errors.messages_for(:stock).empty? %>
              <% @product_form.errors.messages_for(:stock).each do |message| %>
                <p class='text-danger fw-semibold'>* <%= message %></p>
              <% end %>
            <% end %>
          </div>
      </div>

      <div class="d-grid mb-3">
        <%= form.submit 'Edit Product',class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>