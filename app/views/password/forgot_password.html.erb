<div class='d-flex flex-column align-items-center'>
  <h2>Forgot Password</h2>
  <div class='col-sm-4 col-md-4 col-lg-4'>
    <p class='mt-3 fs-5'> Enter your email to send instructions </p>
    <%= form_for @user, url: reset_password_path do |f| %>
      <% if flash[:error] %>
        <div class="alert alert-danger pb-1" role="alert">
          <ul>
            <%= decorate(ErrorForm.new('error')).list_errors(flash[:error]) %>
          </ul>
        </div>
      <% end %>
      <div class="field mb-3">
        <%= f.label :email, class:'form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
      <div class="d-grid mb-3">
        <%= f.submit 'Send Instructions',class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>